@model trylangsamidtermquiz2.Models.AdetPortal
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Prelim Computed Grades</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="StudentNumber" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="StudentNumber" class="form-control" placeholder="Please enter your student number" />
                    <span asp-validation-for="StudentNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="StudentName" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="StudentName" class="form-control" placeholder="Please enter you name" />
                    <span asp-validation-for="StudentName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Quiz1" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Quiz1" class="form-control" placeholder="Please enter grade for quiz 1" />
                    <span asp-validation-for="Quiz1" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Quiz2" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Quiz2" class="form-control" placeholder="Please enter grade for quiz 2" />
                    <span asp-validation-for="Quiz2" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Quiz3" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Quiz3" class="form-control" placeholder="Please enter grade for quiz 3" />
                    <span asp-validation-for="Quiz3" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Ass1" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Ass1" class="form-control" placeholder="Please enter grade for ass 1" />
                    <span asp-validation-for="Ass1" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Ass2" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Ass2" class="form-control" placeholder="Please enter grade for ass 2" />
                    <span asp-validation-for="Ass2" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Ass3" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Ass3" class="form-control" placeholder="Please enter grade for ass 3" />
                    <span asp-validation-for="Ass3" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" /> |
                <a asp-action="Create">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}